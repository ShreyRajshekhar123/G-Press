.DS_Store           # macOS
Thumbs.db           # Windows
./Server/
# Editor specific files
.vscode/            # Visual Studio Code settings
.idea/              # IntelliJ / WebStorm settings

# Python-specific files (for your scrapers)
__pycache__/        # Python compiled bytecode
*.pyc               # Python compiled bytecode
*.pyd               # Python dynamic library (Windows)
*.pyo               # Optimized Python compiled bytecode
venv/               # Common name for Python virtual environments
.pytest_cache/      # pytest cache directory

